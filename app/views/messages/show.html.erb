<h2>Read a Message</h2>

<p>Hello <%=@message.recipient%>.</p>

<% if @correct_password %>
  <%= render partial: 'message' %>
<% else %>
  <%=form_tag check_password_message_path(@message.id), class: 'form-horizontal' do%>

    <div class="form-group">
        <%= label_tag :password, 'Enter Password', class: 'control-label col-xs-2' %>
        <div class="col-xs-10">
            <%= password_field_tag :password, '',size: 15, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
          <%= submit_tag("Submit", {class: 'btn btn-primary'}) %>
        </div>
    </div>

  <% end %>
<% end %>

<p><%= link_to 'go back', messages_path%></p>
